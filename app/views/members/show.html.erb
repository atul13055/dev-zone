<div class="col-lg-10 mx-auto mt-5">
  <%= render 'member_personal_details', user: @user %>
  <div class="card mb-5">
    <div class="card-body">
      <div class="row">
        <div class="col-lg-6">
          <div class="d-flex justify-content-start">
            <h3>About</h3>
          </div>
        </div>
        <% if @user == current_user %>
          <div class="col-lg-6">
            <div class="d-flex justify-content-end">
              <%= link_to edit_member_description_path, class: "edit-about", data: { controller: "bs-modal-form" } do %>
              <i  class="bi bi-pencil-fill text-dark" ></i>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      <%= render 'member_description', user: @user %>
    </div>
  </div>

  <div class="card mb-5">
    <div class="card-body">
      <div class="col-lg-4">
        <div class="d-flex justify-content-start">
          <h4>Work Experiences</h4>
        </div>
      </div>
      <% if @user == current_user %>
        <div class="row">
          <div class="col-lg-12">
            <div class="d-flex justify-content-end">
              <%= link_to new_work_experience_path, data: { controller: "bs-modal-form" },class:"text-decoration-none" do %>
              <i class="bi bi-plus text-dark"></i><span class="text-dark">Add Experience</span>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
      <% if @user.work_experiences.present? %>
        <ul class="list-group" id="work_experience_items">
          <% @user.work_experiences.each do |work_experience| %>
          <%= render 'work_experiences/work_experience', work_experience: work_experience %>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>

  <div class="card mb-5">
    <div class="card-body">
      <div class="col-lg-4">
        <div class="d-flex justify-content-start">
          <h4>Skills </h4>
        </div>
      </div>
      <% if @user == current_user %>
        <div class="row">
          <div class="col-lg-12">
            <div class="d-flex justify-content-end">
              <%= link_to edit_member_skill_path, data: { controller: "bs-modal-form" },class:"text-decoration-none" do %>
              <i class="bi bi-plus text-dark"></i><span class="text-dark">Add Skills</span>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
      <% if @user..present? %>
        <ul class="list-group">
         <%= render 'member_skill', user: @user %>
        </ul>
      <% end %>
    </div>
  </div>

</div>
